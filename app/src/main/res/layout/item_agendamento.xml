<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/agendamento_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#757575"
        android:scaleType="centerCrop"
        android:src="@drawable/food_1" />

    <TextView
        android:id="@+id/agendamento_item_name"
        style="@style/AppTheme.Subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/agendamento_item_image"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@+id/agendamento_item_image"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Foo's Bar" />

    <TextView
        android:id="@+id/agendamento_item_data"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/agendamento_item_name"
        android:layout_below="@+id/agendamento_item_name"
        android:textColor="@color/greySecondary"
        tools:text="Italian" />

    <TextView
        android:id="@+id/agendamento_item_hora"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/agendamento_item_name"
        android:layout_below="@+id/agendamento_item_data"
        android:textColor="@color/greySecondary"
        tools:text="San Francisco" />

</RelativeLayout>
