<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ceu.lavanderia.ListagemActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ceu.lavanderia.ListagemActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="@style/AppTheme"
            app:logo="@drawable/ic_launcher"
            app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
            app:title="@string/app_name"
            app:titleMarginStart="24dp"
            app:titleTextColor="@android:color/white" />

        <RelativeLayout
            android:id="@+id/date_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:padding="8dp">

            <TextView
                android:id="@+id/display_date_text"
                style="@style/AppTheme.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data do Agendamento" />

            <EditText
                android:id="@+id/open_calendar_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_date_text"
                android:hint="Selecione uma data"
                android:focusable="false"
                android:inputType="date"/>

        </RelativeLayout>

        <GridLayout android:id="@+id/time_group"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_group"
            android:columnCount="4"
            android:rowCount="5">

            <Button android:id="@+id/b8"
                android:layout_columnWeight="1"
                android:text="08:00"/>
            <TextView android:id="@+id/t8"
                android:layout_columnWeight="2"
                android:text="5 máquinas\ndisponíveis"
                android:layout_marginTop="-9dp"/>
            <Button android:id="@+id/b13"
                android:layout_columnWeight="1"
                android:text="13:00"/>
            <TextView android:id="@+id/t13"
                android:layout_columnWeight="2"
                android:text="2 máquinas\ndisponíveis"
                android:layout_marginTop="-9dp"/>

            <Button android:id="@+id/b9"
                android:layout_columnWeight="1"
                android:text="09:00"/>
            <TextView  android:id="@+id/t9"
                android:layout_columnWeight="2"
                android:text="9 máquinas\ndisponíveis"
                android:layout_marginTop="-9dp"/>
            <Button android:id="@+id/b14"
                android:layout_columnWeight="1"
                android:text="14:00"/>
            <TextView android:id="@+id/t14"
                android:layout_columnWeight="2"
                android:text="4 máquinas\ndisponíveis"
                android:layout_marginTop="-9dp"/>

            <Button android:id="@+id/b10"
                android:layout_columnWeight="1"
                android:text="10:00"/>
            <TextView android:id="@+id/t10"
                android:layout_columnWeight="2"
                android:text="5 máquinas\ndisponíveis"
                android:layout_marginTop="-9dp"/>
            <Button android:id="@+id/b15"
                android:layout_columnWeight="1"
                android:text="15:00"/>
            <TextView android:id="@+id/t15"
                android:layout_columnWeight="2"
                android:text="1 máquina\ndisponível"
                android:layout_marginTop="-9dp"/>

            <Button android:id="@+id/b11"
                android:layout_columnWeight="1"
                android:text="11:00"/>
            <TextView android:id="@+id/t11"
                android:layout_columnWeight="2"
                android:text="8 máquinas\ndisponíveis"
                android:layout_marginTop="-9dp"/>
            <Button android:id="@+id/b16"
                android:layout_columnWeight="1"
                android:text="16:00"/>
            <TextView android:id="@+id/t16"
                android:layout_columnWeight="2"
                android:text="6 máquinas\ndisponíveis"
                android:layout_marginTop="-9dp"/>

            <Button android:id="@+id/b12"
                android:layout_columnWeight="1"
                android:text="12:00"/>
            <TextView android:id="@+id/t12"
                android:layout_columnWeight="2"
                android:text="5 máquinas\ndisponíveis"
                android:layout_marginTop="-9dp"/>
            <Button android:id="@+id/b17"
                android:layout_columnWeight="1"
                android:text="17:00"/>
            <TextView android:id="@+id/t17"
                android:layout_columnWeight="2"
                android:text="6 máquinas\ndisponíveis"
                android:layout_marginTop="-9dp"/>

        </GridLayout>

        <Button
            android:id="@+id/confirm_button"
            android:layout_marginHorizontal="10dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/AppTheme"
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_group"
            android:text="Confirmar Agendamento"/>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>